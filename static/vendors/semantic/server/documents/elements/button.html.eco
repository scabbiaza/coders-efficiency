      <div class="ui button"><i class="step forward icon"></i></div>
      <div class="ui button"><i class="fast forward icon"></i></div>
      <div class="ui button"><i class="forward icon"></i></div>
      <div class="ui button"><i class="mute icon"></i></div>
    </div>
  </div>


